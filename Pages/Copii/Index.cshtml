@page
@model Proiect__Bia.Pages.Copii.IndexModel

@{
    ViewData["Title"] = "Copii";
}

<h1>Copii</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Copil[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Copil[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Copil[0].DataNasterii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Copil[0].DataIntrariiInSistem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Copil[0].Provenienta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Copil[0].Locatie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Copil) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNasterii)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataIntrariiInSistem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provenienta.TipProvenienta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locatie.NumeCentru)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
