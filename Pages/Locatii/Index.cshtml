@page
@model Proiect__Bia.Pages.Locatii.IndexModel

@{
    ViewData["Title"] = "Locatii";
}

<h1>Locatii</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Locatie[0].NumeCentru)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie[0].Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie[0].Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie[0].Capacitate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Locatie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeCentru)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacitate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
